{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="h4 mb-4 font-weight-normal text-center">Réinitialiser le mot de passe</h1>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(requestForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(requestForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(requestForm.email) }}
                            </div>
                            <small class="text-muted">
                                Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>

                        <button class="btn btn-primary w-100 py-2 mb-3" type="submit">
                            <i class="bi bi-envelope"></i> Envoyer l'email
                        </button>

                        <div class="text-center">
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Retour à la connexion
                            </a>
                        </div>

                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}