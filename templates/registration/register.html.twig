{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="h4 mb-3 font-weight-normal text-center">Devenir Professeur</h1>

                        <p class="text-center">Inscrivez-vous pour devenir professeur et accéder à notre plateforme. Ce formulaire est exclusivement réservé aux professeurs.</p>

                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        {% if not registrationForm.vars.valid %}
                            <div class="alert alert-danger">
                                {{ form_errors(registrationForm) }}
                                {% for child in registrationForm.children %}
                                    {% if not child.vars.valid %}
                                        {{ form_errors(child) }}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.nom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.prenom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.organisation, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.organisation, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.organisation) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-label'}}) }}
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                            S'inscrire
                        </button>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-2">Déjà un compte ?</p>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                                Se connecter
                            </a>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-check-input.is-invalid ~ .form-check-label {
            color: #dc3545;
        }
    </style>
{% endblock %}