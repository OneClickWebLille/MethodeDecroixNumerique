{% extends 'base.html.twig' %}

{% block title %}Liste des blocs{% endblock %}

{% block body %}
    {% include 'include/navbar.html.twig' %}

    <div class="container mt-4">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th>Type</th>
                <th>Valeur</th>
                <th>Couleur</th>
                {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for bloc in blocs %}
                <tr>
                    <td>{{ bloc.type.nom }}</td>
                    <td>{{ bloc.valeur }}</td>
                    <td style="color: {{ bloc.type.color }};">{{ bloc.type.color }}</td>
                    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                        <td>
                            {# edit & delete #}
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}