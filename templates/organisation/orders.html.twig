{% extends 'base.html.twig' %}

{% block title %}Liste des orders{% endblock %}

{% block body %}
    {% include 'include/navbar.html.twig' %}

    <div class="container mt-4">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Date de la commande</th>
                <th>Statut</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.product.nom }}</td>
                    <td>{{ order.quantity }}</td>
                    <td>{{ order.dateInit|date('d/m/Y H:i') }}</td>
                    <td>{{ (order.datePayment and order.isPaid) ? 'Payé le ' ~ order.datePayment|date('d/m/Y H:i') : 'Non payé' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}